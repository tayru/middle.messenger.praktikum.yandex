<main class="messenger-wrapper">
    <aside class="dialogs-list">
        <div class="dialogs-list__my-name">
            <svg width="30" height="30" viewBox="0 0 30 30" fill="none" xmlns="http://www.w3.org/2000/svg"  alt="Аватар пользователя">
                <path d="M24.6593 25.5589C24.0895 23.9641 22.8341 22.5549 21.0876 21.5499C19.3412 20.5448 17.2013 20 15 20C12.7987 20 10.6588 20.5448 8.91239 21.5498C7.16595 22.5549 5.91049 23.9641 5.34074 25.5589" stroke="#48F08E" stroke-width="2" stroke-linecap="round"/>
                <circle cx="15" cy="10" r="5" stroke="#48F08E" stroke-width="2" stroke-linecap="round"/>
            </svg>

            <h1>{{store.state.user.firstName}} {{store.state.user.secondName}}</h1>
            <!--ссылка перезагружает приложение. e.preventDefault() не срабатывает        -->
            {{{Button className="messenger_btn-settings"
                    text="Настройки" onClick=onSettings
            }}}

        </div>

            <form class="dialogs-search">
                <button class="dialogs-search__btn" type="submit"></button>
                <input class="dialogs-search__input" type="text" placeholder="Поиск">
            </form>

        <form class="create-chat">
            <label for="create-chat__input">Создать чат:</label>
            {{{Input  name="reate-chat__input"
                      type="text"
                      class="create-chat__input dialogs-search__input"
                      id="create-chat__input"
                      placeholder="Название чата"
            }}}
            {{{Button className="create-chat__btn"
                      text="Создать чат" onClick=createChat
            }}}

        </form>

        <ul class="dialogs-chat-wrapper">
            {{#each store.state.chats}}
                {{#with this}}
                    {{{ChatItem onClick=../selectChat  id=id title=title last_message=last_message.content unread_count=unread_count}}}
                {{/with}}
            {{/each}}
        </ul>

    </aside>

    <section  class="dialog">
        <div class="dialog_date">19 июня</div>
        <div class="chat">

            {{#each store.state.messages}}
                {{#with this}}
                    {{{Message content=content}}}
                {{/with}}
            {{/each}}

        </div>
        <div class="chat__input">
            <div class="chat__input-error"></div>

            {{{textArea placeholder="Введите текст сообщения" name="message"
                     class="message-area" id="message-area"
                     onFocus=onFocus
                     onBlur=onBlur}}}

            {{{Button className="messenger_btn-send"
                      text="Отправка" onClick=sendMessage
            }}}
