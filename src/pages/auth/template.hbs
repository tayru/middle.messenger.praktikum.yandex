<main class="wrapper-login">
    <section class="form-auth">
        <h1 class="form-auth__title">Вход</h1>
        <form action="" method="post">



        <div class="text-field">
            <label class="text-field__label" for="login">Логин</label>
            <div class="text-field__error"></div>

            {{{Input  name="login"
                      type="text"
                      class="text-field__input"
                      id="login"
                      placeholder="Login"
                      onFocus=checkValidation
                      onBlur=checkValidation
            }}}
        </div>

        <div class="text-field">
            <label class="text-field__label" for="password">Пароль</label>
            <div class="text-field__error"></div>
            {{{Input  name="password"
                      type="password"
                      class="text-field__input"
                      id="password"
                      onFocus=checkValidation
                      onBlur=checkValidation
            }}}
        </div>

            {{{Button
            text="Войти" onClick=onLogin
            }}}


        </form>

        {{{Link class="form-auth__reg"
        text="Нет аккаунта?" onClick=regPage
        }}}

    </section>
</main>
