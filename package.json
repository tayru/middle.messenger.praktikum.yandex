{
  "name": "messenger",
  "version": "2.0.0",
  "engines": {
    "node": ">=16.15.0"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "description": "",
  "scripts": {
    "start": "npm run build && node ./server/server.js",
    "dev": "parcel src/index.html --no-source-maps",
    "build": "parcel build src/index.html",
    "tscheck": "npx tsc --noEmit",
    "eslint": "npx eslint \"./src/**/*.ts\" --ext .ts",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*{.css,.pcss}\" --fix"
  },
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "services": "./src/services",
    "pages": "./src/pages",
    "store": "./src/store",
    "utils": "./src/utils",
    "api": "./src/api"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tayru/middle.messenger.praktikum.yandex.git"
  },
  "author": "Denis Brudanin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tayru/middle.messenger.praktikum.yandex/issues"
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "2.8.2",
    "@types/node": "17.0.23",
    "parcel": "2.8.2",
    "postcss": "8.4.12",
    "postcss-import": "14.1.0",
    "postcss-nested": "6.0.0",
    "typescript": "4.6.2",
    "eslint": "8.30.0",
    "eslint-config-google": "0.14.0",
    "stylelint": "14.13",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "nanoid": "4.0.0"
  },
  "dependencies": {
    "handlebars": "4.7.7",
    "express": "4.18.2"
  }
}
