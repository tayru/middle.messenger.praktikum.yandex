{
  "name": "messenger",
  "version": "3.0.0",
  "engines": {
    "node": ">=v16.19.0"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "description": "",
  "scripts": {
    "start": "npm run build && node ./server/server.js",
    "dev": "webpack --mode development --stats-error-details",
    "dev:start": "webpack-dev-server --mode development --open",
    "build": "webpack --mode production",
    "tscheck": "npx tsc --noEmit",
    "eslint": "npx eslint \"./src/**/*.ts\" --ext .ts",
    "stylelint": "stylelint \"**/*.pcss\"",
    "stylelint:fix": "stylelint \"**/*{.css,.pcss}\" --fix",
    "watch": "webpack --mode development --watch",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "<rootDir>/src/tests/setupEnv.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(pcss)$": "identity-obj-proxy",
      "^core(.*)$": "<rootDir>/src/core$1",
      "^components(.*)$": "<rootDir>/src/components$1",
      "^utils(.*)$": "<rootDir>/src/utils$1",
      "^services(.*)$": "<rootDir>/src/services$1",
      "^api(.*)$": "<rootDir>/src/api$1",
      "^store(.*)$": "<rootDir>/src/store$1",
      "^pages(.*)$": "<rootDir>/src/pages$1",
      "^tests(.*)$": "<rootDir>/src/tests$1"
    }
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tayru/middle.messenger.praktikum.yandex.git"
  },
  "author": "Denis Brudanin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tayru/middle.messenger.praktikum.yandex/issues"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@parcel/transformer-inline-string": "2.8.3",
    "@testing-library/dom": "8.20.0",
    "@testing-library/jest-dom": "5.16.5",
    "@types/jest": "27.5.2",
    "@types/node": "17.0.23",
    "babel-plugin-inline-import": "3.0.0",
    "eslint": "8.30.0",
    "eslint-config-google": "0.14.0",
    "husky": "8.0.3",
    "jest": "27.5.1",
    "nanoid": "4.0.0",
    "node-sass": "8.0.0",
    "parcel": "2.8.3",
    "postcss": "8.4.12",
    "postcss-import": "14.1.0",
    "postcss-nested": "6.0.0",
    "stylelint": "14.13",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "@types/uuid": "9.0.0",
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.3",
    "dotenv": "16.0.3",
    "dotenv-webpack": "8.0.1",
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "identity-obj-proxy": "3.0.0",
    "mini-css-extract-plugin": "2.7.2",
    "msw": "1.0.0",
    "raw-loader": "4.0.2",
    "sass-loader": "13.2.0",
    "ts-loader": "9.4.2",
    "uuid": "9.0.0",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1",
    "whatwg-fetch": "3.6.2"
  }
}
