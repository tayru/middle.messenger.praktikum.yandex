{
  "name": "messenger",
  "version": "3.0.0",
  "engines": {
    "node": ">=v16.19.0"
  },
  "targets": {
    "default": {
      "engines": {
        "browsers": ">= 50%"
      }
    }
  },
  "description": "",
  "scripts": {
    "start": "npm run build && node ./server/server.js",
    "dev": "parcel src/index.html --no-source-maps  --no-cache",
    "build": "parcel build src/index.html",
    "tscheck": "npx tsc --noEmit",
    "eslint": "npx eslint \"./src/**/*.ts\" --ext .ts",
    "stylelint": "stylelint \"**/*.pcss\"",
    "stylelint:fix": "stylelint \"**/*{.css,.pcss}\" --fix",
    "watch": "webpack --mode development --watch"
  },
  "alias": {
    "core": "./src/core",
    "components": "./src/components",
    "services": "./src/services",
    "pages": "./src/pages",
    "store": "./src/store",
    "utils": "./src/utils",
    "api": "./src/api"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tayru/middle.messenger.praktikum.yandex.git"
  },
  "author": "Denis Brudanin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tayru/middle.messenger.praktikum.yandex/issues"
  },
  "devDependencies": {
    "@parcel/transformer-inline-string": "2.8.3",
    "@types/node": "17.0.23",
    "eslint": "8.30.0",
    "eslint-config-google": "0.14.0",
    "nanoid": "4.0.0",
    "node-sass": "8.0.0",
    "parcel": "2.8.3",
    "postcss": "8.4.12",
    "postcss-import": "14.1.0",
    "postcss-nested": "6.0.0",
    "stylelint": "14.13",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "28.0.0",
    "stylelint-config-standard-scss": "5.0.0",
    "typescript": "4.6.2"
  },
  "dependencies": {
    "babel-loader": "9.1.2",
    "clean-webpack-plugin": "4.0.0",
    "css-loader": "6.7.3",
    "express": "4.18.2",
    "handlebars": "4.7.7",
    "html-webpack-plugin": "5.5.0",
    "mini-css-extract-plugin": "2.7.2",
    "raw-loader": "4.0.2",
    "sass-loader": "13.2.0",
    "ts-loader": "9.4.2",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1",
    "webpack-dev-server": "4.11.1"
  }
}
